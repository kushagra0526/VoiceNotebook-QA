{
  "name": "voice-notebook-qa-system",
  "version": "1.0.0",
  "description": "A voice-enabled document management system with real-time transcription, file processing, and intelligent search capabilities",
  "type": "module",
  "private": false,
  "author": {
    "name": "Voice Notebook Team",
    "email": "contact@voicenotebook.dev"
  },
  "license": "MIT",
  "homepage": "https://github.com/YOUR_USERNAME/Voice-Notebook-and-QA-System#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YOUR_USERNAME/Voice-Notebook-and-QA-System.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/Voice-Notebook-and-QA-System/issues"
  },
  "keywords": [
    "voice-recognition",
    "speech-to-text",
    "document-management",
    "file-upload",
    "search-engine",
    "react",
    "typescript",
    "indexeddb",
    "web-speech-api",
    "note-taking",
    "transcription",
    "voice-notes",
    "productivity"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview --host",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "start": "npm run dev",
    "deploy": "npm run build && npm run preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "dexie": "^3.2.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
